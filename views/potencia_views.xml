<?xml version="1.0" encoding="UTF-8" ?>
<odoo>


        <!-- Vista personalizada de arbol inicial -->
    <record id="potencia_model_view_tree" model="ir.ui.view">
        <field name="name">potencia.tree</field> 
        <field name="model">potencia</field> 
        <field name="arch" type="xml">
            <tree string="Potencia"> 
                <field name="id"/>
                <field name="nombre"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
    

    <!-- Vista personalizada de Formulario -->
    <record id="potencia_model_view_form" model="ir.ui.view">
        <field name="name">potencia.form</field>
        <field name="model">potencia</field>
        <field name="arch" type="xml">

            <form string="Potencia">
                <sheet>
                    <group>


                            <notebook>
                                <page string="Potencia">
                                    <group>

                                        <field name="id"/>

                                        <field name="nombre"/>
                                        <field name="active"/>

                                    </group>
                                </page>
                            </notebook>


                    </group>

                </sheet>
            </form>

        </field>

    </record>


    <!-- Vista personalizada de kanban inicial -->
    <record id="potencia_model_view_kanban" model="ir.ui.view">
    <field name="name">potencia.kanban</field>
    <field name="model">potencia</field>
    <field name="arch" type="xml">
        <kanban class="o_kanban_small_column o_kanban_project_tasks" js_class="project_kanban">
            <field name="id"/>
            <field name="nombre"/>
            
            <templates>
                <t t-name="kanban-box">
                    <div class="oe_kanban_global_click oe_kanban_content">
                        <div class="oe_kanban_primary oe_kanban_details">
                            <div class="oe_kanban_title o_kanban_tag_section">
                                <ul>
                                    <li><h6>Id</h6><field name="id"/></li>
                                    
                                    <li><h6>Nombre</h6><field name="nombre"/></li>

                                </ul>
                            </div>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
    </record>

    <!-- Vista personalizada de Busqueda inicial -->
    <record id="potencia_model_view_search" model="ir.ui.view">
        <field name="name">potencia.search</field>
        <field name="model">potencia</field>
        <field name="arch" type="xml">
            <search>
                <field name="id" enable_counters="1"/>
                <field name="nombre" enable_counters="1"/>
            </search>
        </field>
    </record>

    
    <!-- Vista personalizada Modulo Accion -->
    <record id="potencia_model_action" model="ir.actions.act_window"> 
        <field name="name">Potencias</field>
        <field name="res_model">potencia</field> 
        <field name="view_mode">tree,form,kanban</field>
    </record>
   

</odoo>