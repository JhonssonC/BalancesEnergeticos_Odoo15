                                    <field name="geo" attrs="{'invisible': [('tipo_consumidor_id', '>', 4)]}"/>
                                    <field name="serie" attrs="{'invisible': [('tipo_consumidor_id', '>', 4)]}"/>
                                    <field name="marca_medidor_id" attrs="{'invisible': [('tipo_consumidor_id', '>', 4)]}"/>
